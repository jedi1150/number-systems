<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightAdjusted.Theme.NumberSystems" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="PlatformAdjusted.Theme.NumberSystems" parent="NightAdjusted.Theme.NumberSystems">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.NumberSystems" parent="PlatformAdjusted.Theme.NumberSystems" />

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.NumberSystems.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">
            @drawable/ic_splash
        </item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="31">
            @color/colorPrimary
        </item>
        <item name="postSplashScreenTheme">@style/Theme.NumberSystems</item>
    </style>

</resources>
